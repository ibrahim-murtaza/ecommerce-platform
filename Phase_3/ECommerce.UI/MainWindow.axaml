<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:ECommerce.Models;assembly=ECommerce.Models"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="ECommerce.UI.MainWindow"
        Title="E-Commerce Platform - Products"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="WelcomeTextBlock" 
                               Text="Welcome!" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="BLLModeTextBlock"
                               Text="(LINQ Mode)"
                               FontSize="14"
                               Foreground="#BDC3C7"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ViewCartButton"
                            Content="ðŸ›’ View Cart (0)"
                            Click="ViewCartButton_Click"
                            Classes="secondary"/>
                    <Button x:Name="AdminDashboardButton"
                            Content="ðŸ“Š Admin"
                            Click="AdminDashboardButton_Click"
                            Classes="secondary"/>
                    <Button x:Name="ToggleBLLButton"
                            Content="âš™ï¸ Toggle BLL"
                            Click="ToggleBLLButton_Click"
                            Classes="secondary"/>
                    <Button x:Name="LogoutButton"
                            Content="ðŸšª Logout"
                            Click="LogoutButton_Click"
                            Classes="danger"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filter by Category:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="CategoryComboBox" 
                          Width="200"
                          SelectionChanged="CategoryComboBox_SelectionChanged"/>
                <Button x:Name="ShowAllButton"
                        Content="Show All Products"
                        Click="ShowAllButton_Click"
                        Margin="10,0,0,0"
                        Padding="15,5"/>
                <Button x:Name="ShowLowStockButton"
                        Content="ðŸ”´ Low Stock Products"
                        Click="ShowLowStockButton_Click"
                        Background="#FF9800"
                        Foreground="White"
                        Margin="10,0,0,0"
                        Padding="15,5"/>
                <Button x:Name="RefreshButton"
                        Content="ðŸ”„ Refresh"
                        Click="RefreshButton_Click"
                        Margin="10,0,0,0"
                        Padding="15,5"/>
            </StackPanel>
        </Border>

        <!-- Products Grid -->
        <ScrollViewer Grid.Row="2">
            <ItemsControl x:Name="ProductsItemsControl" Margin="15">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:Product">
                        <Border BorderBrush="#BDC3C7" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Padding="15"
                                Margin="10"
                                Width="280"
                                Background="White">
                            <StackPanel>
                                <TextBlock Text="{Binding ProductName}" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>
                                
                                <TextBlock Text="{Binding Category.CategoryName, StringFormat='Category: {0}'}" 
                                           FontSize="12"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" 
                                           FontSize="24" 
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           Margin="0,5,0,5"/>
                                
                                <TextBlock Text="{Binding StockQuantity, StringFormat='In Stock: {0}'}" 
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="View Details"
                                            Tag="{Binding ProductID}"
                                            Click="ViewDetailsButton_Click"
                                            Background="#3498DB"
                                            Foreground="White"
                                            Padding="10,5"
                                            Margin="0,0,5,0"/>
                                    <Button Content="Add to Cart"
                                            Tag="{Binding ProductID}"
                                            Click="AddToCartButton_Click"
                                            Background="#27AE60"
                                            Foreground="White"
                                            Padding="10,5"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>

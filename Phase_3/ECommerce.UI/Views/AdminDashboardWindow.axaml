<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:ECommerce.Models;assembly=ECommerce.Models"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="ECommerce.UI.Views.AdminDashboardWindow"
        Title="Admin Dashboard"
        Width="1000" Height="700"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemAccentColor}" 
                Padding="20">
            <TextBlock Text="ðŸ“Š Admin Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        </Border>

        <!-- Content -->
        <TabControl Grid.Row="1" Margin="20">
            <!-- Add Product Tab -->
            <TabItem Header="âž• Add Product">
                <ScrollViewer>
                    <StackPanel Margin="20" MaxWidth="600">
                        <TextBlock Text="Add New Product" 
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                   Margin="0,0,0,20"/>

                        <!-- Product Name -->
                        <TextBlock Text="Product Name:" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="ProductNameTextBox"
                                 Watermark="Enter product name"
                                 Padding="10"/>

                        <!-- Category -->
                        <TextBlock Text="Category:" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                   Margin="0,10,0,5"/>
                        <ComboBox x:Name="CategoryComboBox"
                                  Padding="10"/>

                        <!-- Price -->
                        <TextBlock Text="Price ($):" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="PriceTextBox"
                                 Watermark="0.00"
                                 Padding="10"/>

                        <!-- Stock Quantity -->
                        <TextBlock Text="Stock Quantity:" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="StockQuantityTextBox"
                                 Watermark="0"
                                 Padding="10"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button x:Name="AddProductButton"
                                    Content="âœ… Add Product"
                                    Click="AddProductButton_Click"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="30,12"
                                    Margin="0,0,10,0"
                                    FontSize="16"
                                    FontWeight="Bold"/>
                            <Button x:Name="ClearFormButton"
                                    Content="ðŸ”„ Clear Form"
                                    Click="ClearFormButton_Click"
                                    Padding="30,12"
                                    FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Orders Tab -->
            <TabItem Header="ðŸ“¦ Orders">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Filter by Status:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <ComboBox x:Name="OrderStatusComboBox"
                                      Width="150"
                                      SelectionChanged="OrderStatusComboBox_SelectionChanged"/>
                            <Button x:Name="ShowAllOrdersButton"
                                    Content="Show All Orders"
                                    Click="ShowAllOrdersButton_Click"
                                    Margin="10,0,0,0"
                                    Padding="15,8"/>
                            <Button x:Name="RefreshOrdersButton"
                                    Content="ðŸ”„ Refresh"
                                    Click="RefreshOrdersButton_Click"
                                    Margin="10,0,0,0"
                                    Padding="15,8"/>
                        </StackPanel>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1">
                        <StackPanel x:Name="OrdersStackPanel" Margin="10"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Revenue Tab -->
            <TabItem Header="ðŸ’° Revenue">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,20,0,20">
                        <TextBlock Text="Calculate Revenue by Date Range" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Start Date:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="1" 
                                        x:Name="StartDatePicker"
                                        Margin="0,0,20,0"/>

                            <TextBlock Grid.Column="2" 
                                       Text="End Date:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="3" 
                                        x:Name="EndDatePicker"/>

                            <Button Grid.Column="4"
                                    x:Name="CalculateRevenueButton"
                                    Content="Calculate Revenue"
                                    Click="CalculateRevenueButton_Click"
                                    Theme="{StaticResource AccentButtonTheme}"
                                    Padding="20,10"
                                    Margin="20,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <Border Grid.Row="1"
                            BorderBrush="{DynamicResource SystemAccentColor}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="30"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Total Revenue" 
                                       FontSize="18"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock x:Name="RevenueTextBlock"
                                       Text="$0.00"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="RevenueDateRangeTextBlock"
                                       FontSize="14"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Statistics Tab -->
            <TabItem Header="ðŸ“ˆ Statistics">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="System Statistics" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                   Margin="0,0,0,20"/>

                        <Button x:Name="RefreshStatsButton"
                                Content="ðŸ”„ Refresh Statistics"
                                Click="RefreshStatsButton_Click"
                                Padding="15,8"
                                Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Products -->
                            <Border Grid.Column="0"
                                    BorderBrush="{DynamicResource SystemAccentColor}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,10,0"
                                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“¦ Total Products" 
                                               FontSize="16"
                                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TotalProductsTextBlock"
                                               Text="0"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource SystemAccentColor}"
                                               HorizontalAlignment="Center"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Orders -->
                            <Border Grid.Column="1"
                                    BorderBrush="{DynamicResource SystemAccentColor}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,10,0"
                                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“‹ Total Orders" 
                                               FontSize="16"
                                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TotalOrdersTextBlock"
                                               Text="0"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="#E74C3C"
                                               HorizontalAlignment="Center"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Users -->
                            <Border Grid.Column="2"
                                    BorderBrush="{DynamicResource SystemAccentColor}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="20"
                                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                                <StackPanel>
                                    <TextBlock Text="ðŸ‘¥ Total Users" 
                                               FontSize="16"
                                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TotalUsersTextBlock"
                                               Text="0"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="#9B59B6"
                                               HorizontalAlignment="Center"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

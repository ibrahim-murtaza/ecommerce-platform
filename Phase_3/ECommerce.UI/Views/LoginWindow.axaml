<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="ECommerce.UI.Views.LoginWindow"
        Title="E-Commerce Platform - Login"
        Width="500" Height="600"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <Window.Styles>
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Styles>

    <TabControl Margin="20">
        <!-- Login Tab -->
        <TabItem Header="Login">
            <StackPanel VerticalAlignment="Center" MaxWidth="400">
                <TextBlock Text="Welcome Back!" Classes="header" HorizontalAlignment="Center"/>
                
                <TextBlock Text="Email:" Classes="label"/>
                <TextBox x:Name="LoginEmailTextBox" Watermark="Enter your email"/>
                
                <TextBlock Text="Password:" Classes="label"/>
                <TextBox x:Name="LoginPasswordTextBox" 
                         Watermark="Enter your password" 
                         PasswordChar="•"/>
                
                <Button x:Name="LoginButton" 
                        Content="Login" 
                        Click="LoginButton_Click"
                        HorizontalAlignment="Stretch"
                        Background="#4CAF50"
                        Foreground="White"/>
                
                <TextBlock x:Name="LoginMessageTextBlock" 
                           Margin="0,10,0,0"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>

                <Separator Margin="0,20"/>
                
                <TextBlock Text="BLL Implementation Mode:" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0">
                    <TextBlock x:Name="BLLTypeTextBlock" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button x:Name="ToggleBLLButton"
                            Content="Toggle BLL Type"
                            Click="ToggleBLLButton_Click"
                            Padding="15,5"/>
                </StackPanel>
            </StackPanel>
        </TabItem>

        <!-- Register Tab -->
        <TabItem Header="Register">
            <ScrollViewer>
                <StackPanel Margin="20" MaxWidth="400">
                    <TextBlock Text="Create Account" Classes="header" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Email:" Classes="label"/>
                    <TextBox x:Name="RegisterEmailTextBox" Watermark="Enter your email"/>
                    
                    <TextBlock Text="Password:" Classes="label"/>
                    <TextBox x:Name="RegisterPasswordTextBox" 
                             Watermark="Enter password" 
                             PasswordChar="•"/>
                    
                    <TextBlock Text="Confirm Password:" Classes="label"/>
                    <TextBox x:Name="RegisterConfirmPasswordTextBox" 
                             Watermark="Confirm password" 
                             PasswordChar="•"/>
                    
                    <TextBlock Text="First Name:" Classes="label"/>
                    <TextBox x:Name="RegisterFirstNameTextBox" Watermark="Enter first name"/>
                    
                    <TextBlock Text="Last Name:" Classes="label"/>
                    <TextBox x:Name="RegisterLastNameTextBox" Watermark="Enter last name"/>
                    
                    <TextBlock Text="Address:" Classes="label"/>
                    <TextBox x:Name="RegisterAddressTextBox" Watermark="Enter address"/>
                    
                    <TextBlock Text="City:" Classes="label"/>
                    <TextBox x:Name="RegisterCityTextBox" Watermark="Enter city"/>
                    
                    <Button x:Name="RegisterButton" 
                            Content="Register" 
                            Click="RegisterButton_Click"
                            HorizontalAlignment="Stretch"
                            Background="#2196F3"
                            Foreground="White"/>
                    
                    <TextBlock x:Name="RegisterMessageTextBlock" 
                               Margin="0,10,0,0"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="ECommerce.UI.Views.ProductDetailWindow"
        Title="Product Details"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Border Padding="30" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
        <StackPanel>
            <TextBlock x:Name="ProductNameTextBlock"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" 
                    BorderThickness="0,0,0,1" 
                    Padding="0,0,0,15"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Category:" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               x:Name="CategoryTextBlock"
                               Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Price:" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                               x:Name="PriceTextBlock"
                               FontSize="24"
                               Foreground="#27AE60"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="In Stock:" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" 
                               x:Name="StockTextBlock"
                               Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Product ID:" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" 
                               x:Name="ProductIdTextBlock"
                               Margin="0,0,0,10"/>
                </Grid>
            </Border>

            <TextBlock Text="Quantity:" 
                       FontWeight="Bold"
                       Margin="0,10,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="DecreaseButton"
                        Content="-"
                        Click="DecreaseButton_Click"
                        Width="40"
                        Height="40"
                        FontSize="20"
                        Margin="0,0,10,0"/>
                <TextBox x:Name="QuantityTextBox"
                         Text="1"
                         Width="100"
                         Height="40"
                         FontSize="18"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"/>
                <Button x:Name="IncreaseButton"
                        Content="+"
                        Click="IncreaseButton_Click"
                        Width="40"
                        Height="40"
                        FontSize="20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddToCartButton"
                        Content="Add to Cart"
                        Click="AddToCartButton_Click"
                        Theme="{StaticResource AccentButtonTheme}"
                        Padding="30,15"
                        FontSize="16"
                        Margin="0,0,10,0"/>
                <Button Content="Close"
                        Click="CloseButton_Click"
                        Padding="30,15"
                        FontSize="16"/>
            </StackPanel>

            <TextBlock x:Name="MessageTextBlock"
                       Margin="0,20,0,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"/>
        </StackPanel>
    </Border>
</Window>

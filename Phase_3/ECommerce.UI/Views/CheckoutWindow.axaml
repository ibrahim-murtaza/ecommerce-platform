<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="ECommerce.UI.Views.CheckoutWindow"
        Title="Checkout"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="ðŸ“¦ Checkout" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="30" MaxWidth="500">
                <TextBlock Text="Shipping Information" 
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Full Address:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="AddressTextBox" 
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Watermark="Enter your full shipping address"
                         Margin="0,0,0,15"/>

                <TextBlock Text="City:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="CityTextBox" 
                         Watermark="Enter city"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Postal Code:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PostalCodeTextBox" 
                         Watermark="Enter postal code"
                         Margin="0,0,0,15"/>

                <Border BorderBrush="#BDC3C7" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,20,0,20"
                        Background="#ECF0F1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Cart Total:"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   x:Name="CartTotalTextBlock"
                                   Text="$0.00"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Order Total:"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#27AE60"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   x:Name="OrderTotalTextBlock"
                                   Text="$0.00"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#27AE60"/>
                    </Grid>
                </Border>

                <TextBlock x:Name="MessageTextBlock"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" 
                BorderBrush="#BDC3C7" 
                BorderThickness="0,1,0,0"
                Padding="20"
                Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PlaceOrderButton"
                        Content="Place Order"
                        Click="PlaceOrderButton_Click"
                        Background="#27AE60"
                        Foreground="White"
                        Padding="40,15"
                        FontSize="16"
                        Margin="0,0,10,0"/>
                <Button Content="Cancel"
                        Click="CancelButton_Click"
                        Background="#95A5A6"
                        Foreground="White"
                        Padding="40,15"
                        FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
